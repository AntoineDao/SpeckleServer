<div class="row align-items-center justify-content-center">
  <div class='col-sm-12 col-lg-5'>
  <h1 class='text-center font-weight-light display-4' style="color:#0A66FF">Speckle,</h1>
  <p class='font-weight-lighter text-center'><small>the open source data platform for aec.</small></p>

  <br>

  <div class='alert alert-secondary'>
    Login @ <b>{{server}}</b> <small>({{url}})</small>.
    {{#if redirectUrl}}
    <hr>
    <small>You will be redirected to {{redirectUrl}}.</small>
    {{/if}}
  </div>

  {{#if error}}
  <div class='alert alert-danger'>Failed to login. Please try again.</div>
  {{/if}}

  <form method="post">
    <div class="form-group">
      <label for="inputEmail">Email address *</label>
      <input required name="email" type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
      <label for="inputPwd">Password *</label>
      <input required minlength="8" name="password" type="password" class="form-control" id="inputPwd" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary btn-block btn-lg">Submit</button>
  </form>
  <hr>
  <p class='text-center'>
    <a onclick="window.location='/signin/local/register'+window.location.search;" href='#'>register</a>
  </p>
  </div>
</div>
